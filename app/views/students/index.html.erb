<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  tr:hover {
    background-color: #f5f5f5;
  }

  .edit-button, .remove-button {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 8px 16px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    margin: 4px 2px;
    cursor: pointer;
  }

  .remove-button {
    background-color: #f44336;
  }

  .ans {
    padding: 8px 16px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    background-color: green;
    color: white;
  }

  .center-container {
    text-align: center;
    margin-top: 16px;
  }
</style>

<table border="1">
  <% @students.each do |std| %>
  <tr>
    <td><%= link_to std.name, student_path(std) %></td>
    <td><%= button_to 'Edit', edit_student_path(std), method: :get, class: 'edit-button' %></td>
    <td><%= button_to 'Remove', student_path(std), method: :delete, data: { confirm: 'Are you sure?' }, class: 'remove-button' %></td>
  </tr>
  <% end %>
</table>

<div class="center-container">
  <%= link_to "Add new student", new_student_path, class: 'ans' %>
</div>
